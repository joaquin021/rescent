---
import Layout from '../../layouts/Layout.astro';
import TrainingSession from '../../components/TrainingSession.jsx';
import aromas from '../../data/aromas.json';

export function getStaticPaths() {
  return aromas.map((aroma) => ({
    params: { id: aroma.id },
    props: { aroma },
  }));
}

const { aroma } = Astro.props;
---

<Layout title={`Entrenamiento: ${aroma.name}`}>
  <main class="min-h-svh bg-slate-900 md:h-screen md:overflow-hidden">
    <!-- Layout Mobile: Vertical (flex-col) -->
    <!-- Layout Desktop: Pantalla dividida (grid-cols-2) -->
    <div class="flex flex-col md:grid md:grid-cols-2 md:h-screen">

      <!-- LADO IZQUIERDO: Imagen (Desktop) / Imagen Superior (Mobile) -->
      <div class="relative w-full aspect-video md:aspect-auto md:h-screen">
        <!-- Imagen Hero con View Transition -->
        <img
          src={aroma.images[0]}
          alt={aroma.name}
          class="absolute inset-0 w-full h-full object-cover"
          transition:name={`aroma-${aroma.id}`}
        />

        <!-- Overlay oscuro sutil -->
        <div class="absolute inset-0 bg-gradient-to-b md:bg-gradient-to-r from-slate-900/30 to-slate-900/0" />

        <!-- BotÃ³n volver (solo mobile, arriba izquierda) -->
