          <a
            href="/"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-800 hover:bg-slate-700 text-slate-100 rounded-full font-semibold transition-all shadow-lg"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver
          </a>
        </div>

        <!-- TÃ­tulo (solo desktop) -->
        <div class="hidden md:block px-8 lg:px-12 pb-6">
          <h1 class="text-4xl lg:text-5xl font-bold text-slate-100 font-serif">
            {aroma.name}
          </h1>
        </div>

        <!-- Contenedor de la SesiÃ³n -->
        <div class="px-4 py-6 md:px-8 lg:px-12 md:flex md:flex-col md:justify-center md:min-h-[calc(100vh-200px)]">
          <TrainingSession client:load aroma={aroma} />
        </div>

        <!-- Consejos (solo desktop, al final) -->
        <div class="hidden md:block px-8 lg:px-12 pb-8">
          <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl p-5 border border-slate-700">
            <h3 class="text-base font-semibold text-slate-200 mb-3">ðŸ’¡ Consejos</h3>
