          <h1 class="text-3xl font-bold text-white font-serif drop-shadow-lg">
            {aroma.name}
          </h1>
        </div>
      </div>

      <!-- LADO DERECHO: Panel de Control (Desktop) / Contenido Scroll (Mobile) -->
      <div class="flex-1 md:h-screen md:overflow-y-auto bg-slate-900">
        <!-- BotÃ³n volver (solo desktop) -->
